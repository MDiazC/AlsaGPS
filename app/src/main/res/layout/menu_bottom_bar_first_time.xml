<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- BOTTOM BAR -->
    <LinearLayout
        style="@style/bottomBar"
        android:id="@+id/bottom_bar">

        <!-- SETTINGS -->
        <LinearLayout
            style="@style/layoutInnerBottomBar"
            android:clickable="true">
            <ImageView
                style="@style/settingsImage"
                android:contentDescription="@string/settings_description" />

            <TextView
                style="@style/settingsText"
                android:id="@+id/settingsText"/>

        </LinearLayout>
        <!-- END SETTINGS -->
        <!-- STARTING POINT -->
        <LinearLayout
            style="@style/layoutInnerBottomBarFirstTime"
            android:clickable="true">
            <ImageView
                style="@style/startingPointImage"
                android:contentDescription="@string/starting_point_description" />

            <TextView
                android:id="@+id/startingPointText"
                style="@style/startingPointText"/>
        </LinearLayout>
        <!-- END STARTING POINT -->
        <!-- ABOUT -->
        <LinearLayout
            style="@style/layoutInnerBottomBarFirstTime"
            android:clickable="true">
            <TextView
                android:id="@+id/interrogation_text"
                style="@style/aboutInterrogation"/>

            <TextView
                android:id="@+id/about_text"
                style="@style/aboutText"/>
        </LinearLayout>
        <!-- END ABOUT -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bottom_bar_first_time"
        style="@style/layoutBottomBarFirstTime">

        <!-- SETTINGS -->
        <LinearLayout
            style="@style/layoutInnerBottomBar"
            android:id="@+id/bottom_bar_settings"
            android:clickable="true">
            <ImageView
                style="@style/settingsImage"
                android:contentDescription="@string/settings_description" />

            <TextView
                style="@style/settingsText" />

        </LinearLayout>
        <!-- END SETTINGS -->
        <!-- STARTING POINT -->
        <LinearLayout
            style="@style/layoutInnerBottomBar"
            android:visibility="invisible">
            <ImageView
                style="@style/startingPointImage"
                android:contentDescription="@string/starting_point_description" />

            <TextView
                style="@style/startingPointText"/>
        </LinearLayout>
        <!-- END STARTING POINT -->
        <!-- ABOUT -->
        <LinearLayout
            style="@style/layoutInnerBottomBar"
            android:visibility="invisible">
            <TextView
                style="@style/aboutInterrogation"/>

            <TextView
                style="@style/aboutText"/>
        </LinearLayout>
        <!-- END ABOUT -->

    </LinearLayout>

</FrameLayout>


