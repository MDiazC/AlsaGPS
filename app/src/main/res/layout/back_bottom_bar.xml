<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- BOTTOM BAR -->
    <LinearLayout
        style="@style/backBottomBar"
        android:id="@+id/back_bottom_bar">

        <!-- SETTINGS -->
        <LinearLayout
            style="@style/layoutBackBottomBar"
            android:clickable="true">
            <ImageView
                style="@style/backImage"
                />

            <TextView
                style="@style/backText"
                android:id="@+id/backText"/>

        </LinearLayout>
        <!-- END SETTINGS -->

        <!-- ABOUT -->
        <LinearLayout
            style="@style/layoutInnerBottomBar"
            android:clickable="true">
            <TextView
                android:id="@+id/interrogation_text"
                style="@style/aboutInterrogation"/>

            <TextView
                android:id="@+id/about_text"
                style="@style/aboutText"/>
        </LinearLayout>
        <!-- END ABOUT -->
    </LinearLayout>

</FrameLayout>


